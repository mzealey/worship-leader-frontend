{
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "*.ts",
    "spec/**/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "types": [
      "jquery",
      "vite/client"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "./*": [
        "./src/*"
      ]
    },
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "rootDirs": ["."]
  }
}
